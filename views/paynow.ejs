<%- include('../includes/header.ejs') %>
<div class="page-header">
  <div class="container">
      <div class="row">
          <div class="col-md-12 text-center">
              <h2>Pay Now</h2>
          </div>
      </div>
  </div>
</div>
<section class="section-padding contact-us-padding">
  <div class="container">
      <div class="row justify-content-center">
          <div class="col-md-12 col-lg-10">
              <form id="myForm" name="myForm" action="/paystack/pay" method="post">
                  
                      <div class="col-md-6">
                          <div class="single-get-touch">
                              <input type="number" name="amount"  placeholder="Loan Amount" required readonly value=<%=info.returnAmount%>>
                          </div>
                      </div>

            <div class="col-md-6">
              <div class="single-get-touch">
                  <input type="email" name="email"  placeholder="Email" required readonly value=<%=info.applicant.email%>>
              </div>
          </div>
     
          <div class="col-md-6">
            <div class="single-get-touch">    
      <input type="text" name="full_name" placeholder="Name" required hidden readonly value=<%= info.applicant.firstName%>
            </div>
        </div>

        <div class="col-md-6">
            <div class="single-get-touch">    
      <input type="text" name="id" placeholder="id" required hidden readonly value=<%= info._id%>
            </div>
        </div>


        <p id="demo"></p>
                      
                      <div class="col-md-12">
                          <div class="single-get-touch">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                              <button type="submit" name="submit" class="btn btn-default btn-sm">Pay</button>
                          </div>
                      </div>
                  
              </form>
          
      </div>
  </div>
</section>



<%- include('../includes/footer.ejs') %>
</body>