<%- include('../includes/header.ejs') %>
<div class="page-header">
  <div class="container">
      <div class="row">
          <div class="col-md-12 text-center">
              <h2>Sign up</h2>
          </div>
      </div>
  </div>
</div>
<section class="section-padding contact-us-padding">
  <div class="container">
      <div class="row justify-content-center">
          <div class="col-md-12 col-lg-10">
              
            <%if (errorMessage) {%>
                <div class="alert alert-danger" role="alert">
                  <%= errorMessage %>
                </div>
                        <% } %>
              <form action="/signup" method="post">
                  <div class="row list-input">
           
                      <div class="col-md-6 mr0">
                          <div class="single-get-touch">
                              <input type="text" name="fname" placeholder="First Name" >
                          </div>
                      </div>
                      <div class="col-md-6">
                          <div class="single-get-touch">
                              <input type="text" name="lname" placeholder="Last Name" >
                          </div>
                      </div>
                      <div class="col-md-6 mr0">
                          <div class="single-get-touch">
                              <input type="email" name="email" placeholder="Email" >
                          </div>
                      </div>
                      <div class="col-md-6">
                          <div class="single-get-touch">
                              <input type="text" name="phone" placeholder="Phone" >
                          </div>
                      </div>
                      <div class="col-md-6 mr0">
                          <div class="single-get-touch">
                              <input type="date" name="date_of_birth" placeholder="Date of Birth  dd/mm/yy*" >
                          </div>
                      </div>
  
                      <div class="col-md-6">
                          <div class="single-get-touch">
                              <input type="text" name="country" placeholder="Country" >
                          </div>
                      </div>
                      <div class="col-md-6 mr0">
                          <div class="single-get-touch">
                              <input type="text" name="city" placeholder="TOWN/CITY *" >
                          </div>
                      </div>
                      <div class="col-md-6">
                          <div class="single-get-touch">
                              <input type="text" name="street" placeholder="STREET *" >
                          </div>
                      </div>
                      <div class="col-md-6 mr0">
                          <div class="single-get-touch">
                              <input type="text" name="institution" placeholder="PLACE OF CURRENT EMPLOYMENT*" >
                          </div>
                      </div>
 
                      <div class="col-md-6">
                        <div class="single-get-touch">
                            <input type="text" name="jobrole" placeholder="JOB TITLE *" >
                        </div>
                    </div>
                    <div class="col-md-6 mr0">
                      <div class="single-get-touch">
                          <input type="text" name="length" placeholder="LENGTH AT CURRENT EMPLOYMENT *" >
                      </div>
                  </div>
                    <div class="col-md-6">
                      <div class="single-get-touch">
                          <input type="text" name="bankname" placeholder="SALARY ACCOUNT BANK NAME" >
                      </div>
                  </div>
                  <div class="col-md-6 mr0">
                    <div class="single-get-touch">
                        <input type="text" name="accountnumber" placeholder="SALARY ACCOUNT NUMBER*" >
                    </div>
                </div>
                <div class="col-md-6">
                  <div class="single-get-touch">
                      <input type="text" name="staffid" placeholder="STAFF ID *" >
                  </div>
              </div>
              <div class="col-md-6 mr0">
                <div class="single-get-touch">
                    <select name="salary" >
                        <option value="Choose Here">SALARY RANGE</option>
                        <option value="10k-50k ">10k-50k</option>
                        <option value="51k-100k">51k-100k </option>
                        <option value="101k-210k ">101k-210k </option>
                        <option value="211k-500k">211k-500k</option>
                        <option value="Above 500k">Above 500k </option>
                    </select>
                </div>
            </div>
            <div class="col-md-6">
              <div class="single-get-touch">
                  <input type="password" name="password" placeholder="PASSWORD *" >
              </div>
          </div>


                     
                      <div class="col-md-12">
                          <div class="single-get-touch">
                            <input type="hidden" name="_csrf" value="<%= csrfToken %>">
                              <button type="submit" name="submit" class="btn btn-default btn-sm">Sign Up</button>
                          </div>
                          <div class="col-md-6">
                                Already have an account?
                                <a href="/login">Log in</a>
                        </div>
                      </div>
                  </div>
              </form>
          </div>
      </div>
  </div>
</section>



